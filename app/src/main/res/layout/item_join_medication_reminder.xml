<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_item_medication_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:padding="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:id="@+id/ll_item_join_medication_reminder_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_item_join_medication_reminder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".75"
            tools:text="Medication name"/>

        <TextView
            android:id="@+id/tv_item_join_medication_reminder_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:textAlignment="viewEnd"
            android:text="@string/frag_new_set_reminder_time"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>